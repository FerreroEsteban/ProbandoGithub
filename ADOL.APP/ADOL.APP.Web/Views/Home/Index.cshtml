@model IList<ADOL.APP.Web.Controllers.HomeController.match>
@{
    ViewBag.Title = "Página principal";
}
<script src="~/Scripts/betsController.js"></script>
<div ng-app="betsApp" ng-controller="matchsController">
    <div id="categories" class="col-a">
        @Html.Partial("SportsTree")
    </div>
    <div>
        <div id="events" class="col-b">
            <div class="breadcrum">
                <a href="#">{{SelectedSportName}}</a><a href="#">America</a><a href="#">Argentina</a><a href="#">Torneo Julio Humberto Grondona 2015</a>
            </div>

            <a class="banner" href="#">
                <img width="482px" height="67px" src="Images/banner-2.jpg">
            </a>
            <!-- eventos -->
            <div ng-repeat="match in matchs track by $index">
                <!-- evento -->
                <a href="~/Home/MatchBet/1">
                    <div class="event">
                        <div class="heading">
                            <span class="event-date">{{ match.Date }}</span>
                            <span class="event-time">{{ match.Time }}</span>
                            <span class="event-title"><span class="team1">{{ match.Nombre }}</span></span>
                            <span class="event-stats">
                                <img src="images/stats-icon.png"></span>
                            <span class="event-lines">+33</span>
                        </div>
                        <div class="select-bet tres">
                            <div ng-class="match.options[0].selected" ng-click="selectMatchOption($index, 0)"><span>{{ match.Local }}</span><span class="value">{{ match.ApuestasDisponibles[0].OddCollection[0].Price }}</span></div>
                            <div ng-class="match.options[1].selected" ng-click="selectMatchOption($index, 1)"><span>Empate</span><span class="value">{{ match.ApuestasDisponibles[0].OddCollection[1].Price }}</span></div>
                            <div ng-class="match.options[2].selected" ng-click="selectMatchOption($index, 2)"><span>{{ match.Visitante }}</span><span class="value">{{ match.ApuestasDisponibles[0].OddCollection[2].Price }}</span></div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-c">
            @Html.Partial("Bets")
        </div>
    </div>
</div>
