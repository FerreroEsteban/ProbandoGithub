@model IList<ADOL.APP.Web.Controllers.HomeController.match>
@{
    ViewBag.Title = "Página principal";
}
<script src="~/Scripts/betsController.js"></script>
<style>
    .hidden {
        display: none;
    }
</style>

<div ng-app="betsApp" ng-controller="matchsController">
    <div id="categories" class="col-a">
        @Html.Partial("SportsTree")
    </div>
    <div>
        <div id="events" class="col-b">
            <div class="breadcrum">
                <a href="#">{{SelectedSportName}}</a><a href="#">America</a><a href="#">Argentina</a><a href="#">Torneo Julio Humberto Grondona 2015</a>
            </div>

            <a class="banner" href="#">
                <img width="482px" height="67px" src="Images/banner-2.jpg">
            </a>
            <!-- eventos -->
            <div class="{{showRegion == 'matchs' ? '' :'hidden' }}" ng-repeat="match in matchs track by $index">
                <!-- evento -->
                <div class="event">
                    <div ng-click="ViewMathcBets(match.Code)" class="heading">
                        <span class="event-date">{{ match.Date }}</span>
                        <span class="event-time">{{ match.Time }}</span>
                        <span class="event-title"><span class="team1">{{ match.Nombre }}</span></span>
                        <span class="event-stats">
                            <img src="images/stats-icon.png"></span>
                        <span class="event-lines">+33</span>
                    </div>
                    <div class="select-bet tres">
                        <div ng-class="match.ApuestasDisponibles[0].OddCollection[0].selected" ng-click="selectMatchOption($index, 0, 'Ganador del partido', match.Local)"><span>{{ match.Local }}</span><span class="value">{{ match.ApuestasDisponibles[0].OddCollection[0].Price }}</span></div>
                        <div ng-class="match.ApuestasDisponibles[0].OddCollection[1].selected" ng-click="selectMatchOption($index, 1, 'Ganador del partido', 'Empate')"><span>Empate</span><span class="value">{{ match.ApuestasDisponibles[0].OddCollection[1].Price }}</span></div>
                        <div ng-class="match.ApuestasDisponibles[0].OddCollection[2].selected" ng-click="selectMatchOption($index, 2, 'Ganador del partido', match.Visitante)"><span>{{ match.Visitante }}</span><span class="value">{{ match.ApuestasDisponibles[0].OddCollection[2].Price }}</span></div>
                    </div>
                </div>
            </div>
            <div class="{{showRegion == 'odds' ? '' :'hidden' }}">
                <div class="event detail">
                    <div class="heading">
                        <span class="event-date">25 feb</span>
                        <span class="event-time">18:00hs</span>
                        <span class="event-title"><span class="team1">Independiente</span><span> - </span><span class="team2">Racing</span></span>
                        <span class="event-stats">
                            <img src="css/stats-icon.png"></span>
                        <span class="event-lines">+33</span>
                    </div>
                    <!-- apuesta -->
                    <div class="typeofbet">
                        <h4>Resultado del partido</h4>
                        <div class="select-bet tres">
                            <div><span>Independiente</span><span class="value">1.30</span></div>
                            <div class="selected"><span>Empate</span><span class="value">2.00</span></div>
                            <div><span>Racing</span><span class="value">4.30</span></div>
                        </div>
                    </div>

                    <!-- apuesta -->
                    <div class="typeofbet">
                        <h4>Resultado exacto</h4>
                        <div class="select-bet dos">
                            <div><span>0 - 0</span><span class="value">1.30</span></div>
                            <div><span>0 - 1</span><span class="value">4.30</span></div>
                            <div><span>0 - 2</span><span class="value">1.30</span></div>
                            <div><span>0 - 3</span><span class="value">4.30</span></div>
                            <div><span>0 - 4</span><span class="value">1.30</span></div>
                            <div><span>0 - 5</span><span class="value">4.30</span></div>
                            <div><span>0 - 6</span><span class="value">1.30</span></div>
                            <div><span>0 - 7</span><span class="value">4.30</span></div>

                        </div>
                    </div>

                    <!-- apuesta -->
                    <div class="typeofbet">
                        <h4>Desarrollo del partido</h4>

                        <div class="sub-bet">
                            <h5>¿En qué tiempo se marcará mayor número de goles?</h5>
                            <div class="select-bet dos">
                                <div><span>Primer tiempo</span><span class="value">1.30</span></div>
                                <div><span>Segundo tiempo</span><span class="value">4.30</span></div>
                            </div>
                        </div>

                        <div class="sub-bet">
                            <h5>¿Qué equipo ganará ambos tiempos?</h5>
                            <div class="select-bet tres">
                                <div><span>Independiente</span><span class="value">1.30</span></div>
                                <div><span>Ninguno</span><span class="value">4.30</span></div>
                                <div><span>Racing</span><span class="value">4.30</span></div>
                            </div>
                        </div>

                        <div class="sub-bet">
                            <h5>Desarrollo del partido</h5>
                            <div class="select-bet dos">
                                <div><span>Se adelanta/Gana el partido</span><span class="value">1.30</span></div>
                                <div><span>Se adelanta/Empata</span><span class="value">4.30</span></div>
                                <div><span>Se adelanta/Pierde</span><span class="value">4.30</span></div>
                                <div><span>Ningún gol</span><span class="value">4.30</span></div>
                            </div>
                        </div>

                    </div>

                    <!-- apuesta -->
                    <div class="typeofbet">
                        <h4>Ambos equipos van a anotar</h4>
                        <div class="select-bet dos">
                            <div><span>Si</span><span class="value">1.30</span></div>
                            <div><span>No</span><span class="value">4.30</span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-c">
            @Html.Partial("Bets")
        </div>
    </div>
</div>
